<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./Bootstrap.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         verbose="true"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true">
    <testsuites>
        <testsuite name="ext">
            <directory>./Extension/</directory>
        </testsuite>
        <testsuite name="zep">
            <directory>./Zephir/</directory>
        </testsuite>
        <testsuite name="fetch">
            <file>./Extension/FetchTest.php</file>
        </testsuite>
    </testsuites>
</phpunit>